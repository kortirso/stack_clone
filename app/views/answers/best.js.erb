<% if @notice %>
	$('#notice').html("<%= @notice %>");
<% else %>
	$('#answers').html("");
	$('#answers').html('<%= j render 'questions/answer' %>');
	$('.edit_answer_btn').click(function(e) {
		e.preventDefault();
		var clickId = this.id;
		$('form#edit_answer_' + clickId).show();
		$(this).hide();
	});
	$('.cancel_edit_answer').click(function(e) {
		e.preventDefault();
		$('.edit_answer').hide();
		$(this).parent('form').parent('.answer').children('.edit_answer_btn').show();
	});
<% end %>