$('#notice').html("");
<% if @answer.id %>
	$('#answers').append("<%= j render @answer %> ");
	$('.edit_answer_btn').click(function(e) {
		e.preventDefault();
		var clickId = this.id;
		$('form#edit_answer_' + clickId).show();
		$(this).hide();
	});
	$('.cancel_edit_answer').click(function(e) {
		e.preventDefault();
		$('.edit_answer').hide();
		$(this).parent('form').parent('.answer').children('.edit_answer_btn').show();
	});
	$('#answer_body').val('');
<% else %>
	<%- noticer = '' %>
	<%- @answer.errors.full_messages.each { |message| noticer += "#{message} " } %>
	$('#notice').html("Error when create answer - <%= noticer %>");
<% end %>
