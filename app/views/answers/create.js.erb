$('#notice').html("");
<% if @answer.id %>
	$('#answers').append("<%= j render @answer %> ");
<% else %>
	<%- noticer = '' %>
	<%- @answer.errors.full_messages.each { |message| noticer += "#{message} " } %>
	$('#notice').html("Error when create answer - <%= noticer %>");
<% end %>
$('#answer_body').val('');
