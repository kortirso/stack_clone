$('#edit_answer_<%= @answer.id %>').hide();
$('#<%= @answer.id %>').show();
<% if @answer.errors.present? %>
    <% noticer = '' %>
    <% @answer.errors.full_messages.each { |message| noticer += "#{message} " } %>
    $('#notice').html("Error when update answer - <%= noticer %>");
<% else %>
    <% if remotipart_submitted? %>
        $('#answers-<%= @answer.id %>').html('<%= j "#{render(partial: @answer, locals: { answer: @answer, visibility: true }) }" %>');
    <% else %>
        $('#answers-<%= @answer.id %>').html('<%= j render(partial: @answer, locals: { answer: @answer, visibility: true }) %>' );
    <% end %>
<% end %>